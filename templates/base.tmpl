{{ define "index" }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BARK C2 Portal</title>
    <link rel="stylesheet" href="/static/css/neon.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>BARK C2</h1>
            <p class="subtitle">Command & Control Portal</p>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="#" id="dashboard-link">Dashboard</a>
                <a href="#about">About</a>
            </div>
        </header>
        
        <!-- Login/Register Component -->
        {{ template "auth" . }}
        
        <!-- Dashboard (hidden by default) -->
        <div id="dashboard" class="dashboard" style="display: none;">
            <!-- Profile Card -->
            {{ template "components/profile_card" . }}
            
            <!-- Stats Card -->
            {{ template "components/stats_card" . }}
            
            <!-- Actions Card -->
            {{ template "components/actions_card" . }}
        </div>
        
        <!-- About Section -->
        <div class="app-info" id="about">
            <h3>About BARK C2</h3>
            <p>BARK C2 is a command and control system from which truly persistent XSS agents can be managed :)</p>
        </div>
    </div>

    <!-- Modals -->
    {{ template "modals/profile_modal" . }}
    {{ template "modals/agents_modal" . }}
    
    <script src="/static/js/main.js"></script>
</body>
</html>
{{ end }}