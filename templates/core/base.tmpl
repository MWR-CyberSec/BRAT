<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BARK C2 Portal</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;700&display=swap">
    <link rel="stylesheet" href="/static/css/neon.css">
    <script src="/static/js/agents.js"></script>
    <script src="/static/js/stager.js"></script>
    <script src="/static/js/plugin-library.js"></script>

    <script>
        console.log('Inline script executed at', new Date().toISOString());
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded from inline script');
            const form = document.getElementById('login-form');
            console.log('Login form element:', form);
            
            // Add glitch line effect for cyberpunk theme
            addGlitchLine();
        });
        
        function addGlitchLine() {
            const glitchLine = document.createElement('div');
            glitchLine.classList.add('glitch-line');
            document.body.appendChild(glitchLine);
        }
    </script>
    
</head>
<body>
    <div class="container">
        <header>
            <h1>BARK <span class="title-accent">C2</span></h1>
            <p class="subtitle">Command & Control Portal</p>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="#" id="dashboard-link">Dashboard</a>
                <a href="#about">About</a>
            </div>
        </header>
        
        <!-- Login/Register Component -->
        {{ template "auth" . }}
        
        <!-- Dashboard (hidden by default) -->
        <div id="dashboard" class="dashboard" style="display: none;">
            <!-- Profile Card -->
            {{ template "profile_card" . }}
            
            <!-- Stats Card -->
            {{ template "stats_card" . }}
            
            <!-- Actions Card -->
            {{ template "actions_card" . }}
        </div>
        
        <!-- About Section -->
        <div class="app-info" id="about">
            <h3>About BARK C2</h3>
            <p>BARK C2 is a command and control system from which truly persistent XSS agents can be managed :)</p>
            <div class="cyberpunk-divider"></div>
            <p class="cyberpunk-small-text">VERSION 1.0 | UNAUTHORIZED ACCESS PROHIBITED</p>
        </div>
    </div>

    <!-- Modals -->
    {{ template "profile_modal" . }}
    {{ template "agents_modal" . }}
    {{ template "payload_modal" . }}
    
    <!-- Plugin Library Modal -->
    <div id="plugin-library-modal" class="plugin-library-modal">
        <div class="plugin-library-content">
            <div class="plugin-library-header">
                <h2><i class="fas fa-puzzle-piece"></i> Plugin Library</h2>
                <button class="close-library">&times;</button>
            </div>
            <div class="plugin-library-body">
                <div class="plugin-sidebar">
                    <div class="plugin-sidebar-header">
                        <h3>Plugins</h3>
                        <div class="plugin-sidebar-actions">
                            <button id="new-plugin-btn" class="btn btn-primary">
                                <i class="fas fa-plus"></i> New
                            </button>
                            <button id="load-template-btn" class="btn btn-secondary">
                                <i class="fas fa-file-code"></i> Template
                            </button>
                        </div>
                    </div>
                    <div id="plugin-library-list" class="plugin-library-list">
                        <div class="loading">Loading plugins...</div>
                    </div>
                </div>
                <div class="plugin-editor">
                    <div class="plugin-editor-header">
                        <h3 id="editor-title">Plugin Editor</h3>
                        <div class="plugin-form">
                            <div class="form-group">
                                <label for="plugin-name-input">Plugin Name:</label>
                                <input type="text" id="plugin-name-input" placeholder="Enter plugin name">
                            </div>
                            <div class="form-group">
                                <label for="plugin-description-input">Description:</label>
                                <input type="text" id="plugin-description-input" placeholder="Enter plugin description">
                            </div>
                            <button id="save-plugin-btn" class="btn btn-success">
                                <i class="fas fa-save"></i> Save Plugin
                            </button>
                        </div>
                    </div>
                    <div class="plugin-editor-body">
                        <div id="plugin-code-editor" class="code-editor-container">
                            <!-- Code editor will be initialized here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/static/js/main.js"></script>
</body>
</html>