<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BARK Debug Dashboard</title>
    <link rel="stylesheet" href="/static/css/neon.css">
    <link rel="stylesheet" href="/static/css/dashboard.css">
    <style>
        .debug-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .debug-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .debug-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .debug-card {
            background: rgba(0, 255, 255, 0.1);
            border: 1px solid #00ffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
        }
        
        .debug-card h3 {
            color: #00ffff;
            margin-bottom: 15px;
            border-bottom: 1px solid #00ffff;
            padding-bottom: 10px;
        }
        
        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }
        
        .status-ok {
            background-color: #00ff00;
            box-shadow: 0 0 10px #00ff00;
        }
        
        .status-error {
            background-color: #ff0000;
            box-shadow: 0 0 10px #ff0000;
        }
        
        .debug-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        
        .debug-table th,
        .debug-table td {
            padding: 8px 12px;
            border: 1px solid #00ffff;
            text-align: left;
        }
        
        .debug-table th {
            background: rgba(0, 255, 255, 0.2);
            color: #00ffff;
        }
        
        .debug-table td {
            background: rgba(0, 255, 255, 0.05);
        }
        
        .btn-debug {
            background: linear-gradient(45deg, #ff00ff, #00ffff);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .btn-debug:hover {
            box-shadow: 0 0 20px rgba(255, 0, 255, 0.5);
            transform: translateY(-2px);
        }
        
        .btn-danger {
            background: linear-gradient(45deg, #ff0000, #ff6600);
        }
        
        .btn-danger:hover {
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
        }
        
        .json-display {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid #00ffff;
            padding: 10px;
            border-radius: 5px;
            max-height: 200px;
            overflow-y: auto;
            font-family: monospace;
            font-size: 12px;
        }
        
        .refresh-indicator {
            color: #00ffff;
            font-size: 12px;
            margin-top: 10px;
        }
        
        .metric-value {
            font-size: 24px;
            font-weight: bold;
            color: #00ffff;
            margin: 10px 0;
        }
        
        .stager-badge {
            background: linear-gradient(45deg, #ff00ff, #ff6600);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 10px;
            color: white;
        }
        
        .agent-badge {
            background: linear-gradient(45deg, #00ff00, #00ffff);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 10px;
            color: black;
        }
        
        .queue-empty {
            color: #666;
            font-style: italic;
        }
        
        .log-entry {
            margin: 5px 0;
            padding: 8px;
            border-left: 3px solid #00ffff;
            background: rgba(0, 255, 255, 0.05);
        }
        
        .auto-refresh {
            margin: 10px 0;
        }
        
        .auto-refresh label {
            color: #00ffff;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="debug-container">
        <div class="debug-header">
            <h1>BARK Debug Dashboard</h1>
            <div class="auto-refresh">
                <label>
                    <input type="checkbox" id="auto-refresh" checked> Auto-refresh (5s)
                </label>
                <button class="btn-debug" onclick="refreshAll()">Refresh All</button>
                <button class="btn-danger" onclick="flushQueues()">Flush Redis Queues</button>
            </div>
        </div>

        <div class="debug-grid">
            <!-- System Health Card -->
            <div class="debug-card">
                <h3>System Health</h3>
                <div id="system-health">
                    <div class="metric-value">Loading...</div>
                </div>
            </div>

            <!-- Agent Statistics Card -->
            <div class="debug-card">
                <h3>Agent Statistics</h3>
                <div id="agent-stats">
                    <div class="metric-value">Loading...</div>
                </div>
            </div>

            <!-- Redis Queue Status Card -->
            <div class="debug-card">
                <h3>Redis Queue Status</h3>
                <div id="redis-status">
                    <div class="metric-value">Loading...</div>
                </div>
            </div>

            <!-- Database Status Card -->
            <div class="debug-card">
                <h3>Database Status</h3>
                <div id="database-status">
                    <div class="metric-value">Loading...</div>
                </div>
                <button class="btn-debug" onclick="testDatabase()">Test Connection</button>
            </div>
        </div>

        <!-- Redis Queues Section -->
        <div class="debug-card">
            <h3>Redis Command Queues</h3>
            <div id="redis-queues">
                <div class="metric-value">Loading...</div>
            </div>
        </div>

        <!-- Registered Agents Section -->
        <div class="debug-card">
            <h3>Registered Agents</h3>
            <div id="registered-agents">
                <div class="metric-value">Loading...</div>
            </div>
        </div>

        <!-- Debug Log Section -->
        <div class="debug-card">
            <h3>Debug Log</h3>
            <div id="debug-log">
                <div class="log-entry">Debug dashboard initialized</div>
            </div>
        </div>
    </div>

    <script>
        let autoRefreshInterval;
        let isAutoRefreshEnabled = true;
        let jwtToken = null;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            // Get JWT token from localStorage only (no URL parameters)
            jwtToken = localStorage.getItem('jwt_token');
            
            if (!jwtToken) {
                alert('Authentication required. Redirecting to login...');
                window.location.href = '/';
                return;
            }
            
            refreshAll();
            setupAutoRefresh();
        });

        // Helper function to make authenticated requests
        function makeAuthenticatedRequest(url, options = {}) {
            const defaultOptions = {
                headers: {
                    'Authorization': 'Bearer ' + jwtToken,
                    'Content-Type': 'application/json'
                }
            };
            
            // Merge headers
            if (options.headers) {
                defaultOptions.headers = { ...defaultOptions.headers, ...options.headers };
            }
            
            return fetch(url, { ...defaultOptions, ...options });
        }

        // Setup auto-refresh
        function setupAutoRefresh() {
            const checkbox = document.getElementById('auto-refresh');
            checkbox.addEventListener('change', function() {
                isAutoRefreshEnabled = this.checked;
                if (isAutoRefreshEnabled) {
                    startAutoRefresh();
                } else {
                    stopAutoRefresh();
                }
            });
            
            if (isAutoRefreshEnabled) {
                startAutoRefresh();
            }
        }

        function startAutoRefresh() {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
            }
            autoRefreshInterval = setInterval(refreshAll, 5000);
        }

        function stopAutoRefresh() {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
            }
        }

        // Refresh all data
        function refreshAll() {
            addLogEntry('Refreshing all data...');
            loadSystemHealth();
            loadRedisQueues();
            loadRegisteredAgents();
        }

        // Load system health data
        function loadSystemHealth() {
            makeAuthenticatedRequest('/debug/api/health')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    const healthDiv = document.getElementById('system-health');
                    const dbStatus = data.database_status.startsWith('ERROR') ? 'error' : 'ok';
                    const redisStatus = data.redis_status.startsWith('ERROR') ? 'error' : 'ok';
                    
                    healthDiv.innerHTML = `
                        <div><span class="status-indicator status-${dbStatus}"></span>Database: ${data.database_status}</div>
                        <div><span class="status-indicator status-${redisStatus}"></span>Redis: ${data.redis_status}</div>
                        <div class="metric-value">Total Agents: ${data.total_agents}</div>
                        <div>Stagers: ${data.active_stagers} | Full Agents: ${data.full_agents}</div>
                        <div>Queued Commands: ${data.total_commands}</div>
                        <div class="refresh-indicator">Last updated: ${new Date(data.timestamp).toLocaleTimeString()}</div>
                    `;
                    
                    // Update individual status cards
                    document.getElementById('agent-stats').innerHTML = `
                        <div class="metric-value">${data.total_agents}</div>
                        <div>Total Agents</div>
                        <div>Stagers: ${data.active_stagers}</div>
                        <div>Full Agents: ${data.full_agents}</div>
                    `;
                    
                    document.getElementById('redis-status').innerHTML = `
                        <div class="metric-value">${data.total_commands}</div>
                        <div>Queued Commands</div>
                        <div><span class="status-indicator status-${redisStatus}"></span>${data.redis_status}</div>
                    `;
                    
                    document.getElementById('database-status').innerHTML = `
                        <div><span class="status-indicator status-${dbStatus}"></span>${data.database_status}</div>
                        <div>Agent Count: ${data.total_agents}</div>
                    `;
                })
                .catch(error => {
                    addLogEntry('Error loading system health: ' + error.message, 'error');
                    if (error.message.includes('401')) {
                        addLogEntry('Authentication expired. Please login again.', 'error');
                        setTimeout(() => window.location.href = '/', 2000);
                    }
                });
        }

        // Load Redis queue data
        function loadRedisQueues() {
            makeAuthenticatedRequest('/debug/api/redis-queues')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    const queuesDiv = document.getElementById('redis-queues');
                    
                    if (data.queues.length === 0) {
                        queuesDiv.innerHTML = '<div class="queue-empty">No active command queues</div>';
                        return;
                    }
                    
                    let html = '<table class="debug-table"><thead><tr><th>Queue</th><th>Commands</th><th>Latest Commands</th></tr></thead><tbody>';
                    
                    data.queues.forEach(queue => {
                        html += `<tr>
                            <td>${queue.queue_name}</td>
                            <td>${queue.command_count}</td>
                            <td>`;
                        
                        if (queue.commands.length > 0) {
                            queue.commands.slice(0, 3).forEach(cmd => {
                                html += `<div>${cmd.command} (${cmd.agent_id})</div>`;
                            });
                            if (queue.commands.length > 3) {
                                html += `<div>... and ${queue.commands.length - 3} more</div>`;
                            }
                        } else {
                            html += '<div class="queue-empty">No commands</div>';
                        }
                        
                        html += '</td></tr>';
                    });
                    
                    html += '</tbody></table>';
                    html += `<div class="refresh-indicator">Last updated: ${new Date(data.timestamp).toLocaleTimeString()}</div>`;
                    
                    queuesDiv.innerHTML = html;
                })
                .catch(error => {
                    addLogEntry('Error loading Redis queues: ' + error.message, 'error');
                });
        }

        // Load registered agents
        function loadRegisteredAgents() {
            makeAuthenticatedRequest('/debug/api/agents')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    const agentsDiv = document.getElementById('registered-agents');
                    
                    if (data.agents.length === 0) {
                        agentsDiv.innerHTML = '<div class="queue-empty">No registered agents</div>';
                        return;
                    }
                    
                    let html = '<table class="debug-table"><thead><tr><th>ID</th><th>Name</th><th>Type</th><th>Source IP</th><th>Version</th><th>Created</th></tr></thead><tbody>';
                    
                    data.agents.forEach(agent => {
                        const badge = agent.is_stager ? '<span class="stager-badge">STAGER</span>' : '<span class="agent-badge">AGENT</span>';
                        html += `<tr>
                            <td>${agent.id}</td>
                            <td>${agent.name}</td>
                            <td>${badge}</td>
                            <td>${agent.source_ip || 'Unknown'}</td>
                            <td>${agent.version || 'Unknown'}</td>
                            <td>${new Date(agent.created_at).toLocaleString()}</td>
                        </tr>`;
                    });
                    
                    html += '</tbody></table>';
                    html += `<div class="refresh-indicator">Total: ${data.count} agents | Last updated: ${new Date(data.timestamp).toLocaleTimeString()}</div>`;
                    
                    agentsDiv.innerHTML = html;
                })
                .catch(error => {
                    addLogEntry('Error loading agents: ' + error.message, 'error');
                });
        }

        // Test database connection
        function testDatabase() {
            addLogEntry('Testing database connection...');
            makeAuthenticatedRequest('/debug/api/test-db')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.status === 'OK') {
                        addLogEntry('Database connection test: SUCCESS', 'success');
                    } else {
                        addLogEntry('Database connection test: FAILED - ' + data.message, 'error');
                    }
                })
                .catch(error => {
                    addLogEntry('Database connection test: ERROR - ' + error.message, 'error');
                });
        }

        // Flush Redis queues
        function flushQueues() {
            if (!confirm('Are you sure you want to flush all Redis command queues? This will clear all pending commands.')) {
                return;
            }
            
            addLogEntry('Flushing Redis queues...');
            makeAuthenticatedRequest('/debug/api/flush-queues', { method: 'POST' })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    addLogEntry(`Redis queues flushed: ${data.deleted_count} queues cleared`, 'success');
                    loadRedisQueues(); // Refresh queue display
                })
                .catch(error => {
                    addLogEntry('Error flushing queues: ' + error.message, 'error');
                });
        }

        // Add log entry
        function addLogEntry(message, type = 'info') {
            const logDiv = document.getElementById('debug-log');
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerHTML = `[${new Date().toLocaleTimeString()}] ${message}`;
            
            if (type === 'error') {
                entry.style.borderLeftColor = '#ff0000';
                entry.style.backgroundColor = 'rgba(255, 0, 0, 0.1)';
            } else if (type === 'success') {
                entry.style.borderLeftColor = '#00ff00';
                entry.style.backgroundColor = 'rgba(0, 255, 0, 0.1)';
            }
            
            logDiv.insertBefore(entry, logDiv.firstChild);
            
            // Keep only last 20 entries
            while (logDiv.children.length > 20) {
                logDiv.removeChild(logDiv.lastChild);
            }
        }
    </script>
</body>
</html>