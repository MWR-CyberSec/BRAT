{{ define "payload_modal" }}
<div id="payload-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Stager Generator & Configurator</h2>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="stager-config-container">
                <!-- Configuration Section -->
                <div class="config-section">
                    <h3>Configuration</h3>
                    <div class="config-form">
                        <div class="form-group">
                            <label for="server-ip">Server IP:</label>
                            <input type="text" id="server-ip" placeholder="192.168.1.100" required>
                        </div>
                        <div class="form-group">
                            <label for="server-port">Server Port:</label>
                            <input type="text" id="server-port" value="8080" required>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="use-https"> Use HTTPS/WSS
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="agent-id">Custom Agent ID (optional):</label>
                            <input type="text" id="agent-id" placeholder="Leave empty for auto-generation">
                        </div>
                    </div>
                </div>

                <!-- Plugin Selection Section -->
                <div class="config-section">
                    <h3>Available Plugins</h3>
                    <div class="plugin-section-header">
                        <p>Select plugins to include in your stager:</p>
                        <button id="plugin-library-btn" class="btn btn-secondary">
                            <i class="fas fa-puzzle-piece"></i> Manage Plugin Library
                        </button>
                    </div>
                    <div id="plugin-list" class="plugin-list">
                        <div class="loading">Loading plugins...</div>
                    </div>
                </div>

                <!-- Advanced Options Section -->
                <div class="config-section">
                    <h3>Advanced Options</h3>
                    <div class="advanced-options">
                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="minify-code" checked> Minify Code
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="obfuscate"> Basic Obfuscation
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Generate Button -->
                <div class="config-section">
                    <button id="generate-stager" class="btn btn-primary">
                        <i class="fas fa-cogs"></i> Generate Stager
                    </button>
                </div>

                <!-- Results Section -->
                <div id="stager-results" class="config-section" style="display: none;">
                    <h3>Generated Stager</h3>
                    
                    <!-- Delivery Methods -->
                    <div class="delivery-methods">
                        <h4>Delivery Methods:</h4>
                        
                        <!-- Script Tag Method -->
                        <div class="delivery-method">
                            <h5>1. Script Tag (Remote Loading)</h5>
                            <p>Point a script tag to this URL:</p>
                            <div class="code-block">
                                <code id="script-tag-url">&lt;script src="[URL will appear here]"&gt;&lt;/script&gt;</code>
                                <button class="copy-btn" data-target="script-tag-url">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Inline Injection Method -->
                        <div class="delivery-method">
                            <h5>2. Inline Injection (for onerror, etc.)</h5>
                            <p>Minified code for inline injection:</p>
                            <div class="code-block">
                                <textarea id="inline-code" readonly></textarea>
                                <button class="copy-btn" data-target="inline-code">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Full Source -->
                        <div class="delivery-method">
                            <h5>3. Full Source Code</h5>
                            <button id="show-full-source" class="btn btn-small">
                                <i class="fas fa-code"></i> Show Full Source
                            </button>
                            <div id="full-source-container" style="display: none;">
                                <div class="code-block">
                                    <textarea id="full-source" readonly></textarea>
                                    <button class="copy-btn" data-target="full-source">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.stager-config-container {
    padding: 20px;
    max-height: 80vh;
    overflow-y: auto;
}

.config-section {
    margin-bottom: 25px;
    padding: 15px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    border-left: 3px solid var(--cyberpunk-secondary);
}

.config-section h3 {
    color: var(--cyberpunk-primary);
    margin-top: 0;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.config-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group label {
    color: var(--cyberpunk-text);
    margin-bottom: 5px;
    font-size: 0.9rem;
}

.form-group input[type="text"] {
    padding: 8px;
    background-color: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(0, 238, 255, 0.3);
    border-radius: 3px;
    color: var(--cyberpunk-text);
    font-family: monospace;
}

.form-group input[type="text"]:focus {
    outline: none;
    border-color: var(--cyberpunk-secondary);
    box-shadow: 0 0 5px rgba(0, 238, 255, 0.3);
}

.form-group input[type="checkbox"] {
    margin-right: 8px;
}

.plugin-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 10px;
    max-height: 200px;
    overflow-y: auto;
}

.plugin-item {
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(0, 238, 255, 0.2);
    border-radius: 3px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.plugin-item:hover {
    border-color: var(--cyberpunk-secondary);
    background-color: rgba(0, 238, 255, 0.1);
}

.plugin-item.selected {
    border-color: var(--cyberpunk-secondary);
    background-color: rgba(0, 238, 255, 0.2);
}

.plugin-item h4 {
    color: var(--cyberpunk-secondary);
    margin: 0 0 5px 0;
    font-size: 1rem;
}

.plugin-item p {
    color: var(--cyberpunk-text);
    margin: 0;
    font-size: 0.8rem;
    opacity: 0.8;
}

.plugin-section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.plugin-section-header p {
    margin: 0;
    color: var(--cyberpunk-text);
    font-size: 0.9rem;
}

.btn-secondary {
    background-color: var(--cyberpunk-secondary);
    color: var(--cyberpunk-bg);
    border: none;
    padding: 8px 12px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.2s ease;
}

.btn-secondary:hover {
    background-color: var(--cyberpunk-primary);
}

.advanced-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.delivery-methods {
    margin-top: 20px;
}

.delivery-method {
    margin-bottom: 20px;
    padding: 15px;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 3px;
}

.delivery-method h5 {
    color: var(--cyberpunk-secondary);
    margin: 0 0 10px 0;
}

.delivery-method p {
    color: var(--cyberpunk-text);
    margin: 5px 0;
    font-size: 0.9rem;
}

.code-block {
    position: relative;
    margin: 10px 0;
}

.code-block code {
    display: block;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(0, 238, 255, 0.3);
    border-radius: 3px;
    color: var(--cyberpunk-secondary);
    font-family: monospace;
    font-size: 0.8rem;
    word-break: break-all;
}

.code-block textarea {
    width: 100%;
    min-height: 100px;
    max-height: 300px;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(0, 238, 255, 0.3);
    border-radius: 3px;
    color: var(--cyberpunk-secondary);
    font-family: monospace;
    font-size: 0.8rem;
    resize: vertical;
}

.copy-btn {
    position: absolute;
    top: 5px;
    right: 5px;
    background-color: var(--cyberpunk-secondary);
    color: var(--cyberpunk-bg);
    border: none;
    padding: 5px 8px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 0.8rem;
    transition: all 0.2s ease;
}

.copy-btn:hover {
    background-color: var(--cyberpunk-primary);
}

.loading {
    text-align: center;
    color: var(--cyberpunk-text);
    padding: 20px;
    font-style: italic;
}

@media (max-width: 768px) {
    .config-form {
        grid-template-columns: 1fr;
    }
    
    .plugin-list {
        grid-template-columns: 1fr;
    }
    
    .advanced-options {
        grid-template-columns: 1fr;
    }
}
</style>
{{ end }}